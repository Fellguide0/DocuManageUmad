<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocuManageUmad.Pages.ManageExpedientPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <!-- Encabezado -->
            <Label Text="Gestionar Expedientes"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"/>

            <Label Text="Expedientes de los alumnos."
                   FontSize="14"
                   TextColor="Gray"/>

            <!-- Barra de bÃºsqueda -->
            <Border StrokeThickness="1"
                    Stroke="LightGray"
                    BackgroundColor="#F2F2F2"
                    Padding="10"
                    StrokeShape="RoundRectangle 10">
                <HorizontalStackLayout Spacing="10">
                    <Image Source="search_icon.png" WidthRequest="20" HeightRequest="20"/>
                    <Entry x:Name="SearchEntry"
                           Placeholder="Buscar expediente"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           TextChanged="OnSearchTextChanged"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Controles de Filtros y Ordenamiento -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Fill">
                <Button Text="â¬‡ Sort" BackgroundColor="LightGray" TextColor="Black" Clicked="OnSortClicked"/>
                <Button Text="ðŸ” Filter" BackgroundColor="LightGray" TextColor="Black" Clicked="OnFilterClicked"/>
            </HorizontalStackLayout>

            <!-- SecciÃ³n de Acciones -->
            <Label Text="Acciones"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,10,0,5"/>

            <!-- Lista de Expedientes -->
            <CollectionView ItemsSource="{Binding Expedients}" SelectionMode="Single">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeThickness="1"
                                Stroke="LightGray"
                                BackgroundColor="#F0F4FF"
                                Padding="15"
                                StrokeShape="RoundRectangle 10"
                                Margin="5">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="{Binding Icon}" WidthRequest="40" HeightRequest="40"/>
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="{Binding Location}" FontSize="14" TextColor="Gray"/>
                                </VerticalStackLayout>
                                <Label Text="{Binding Status}" FontSize="14" TextColor="{Binding StatusColor}" 
                                       HorizontalOptions="End"/>
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
